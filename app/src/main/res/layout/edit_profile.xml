<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.UserInformation"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/gradient">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/darkViolet"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/lightViolet">

            <!-- Logo and Toolbar Elements -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/veknhek" />


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"

            app:cardBackgroundColor="@color/darkViolet"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="188dp"
                    android:layout_height="188dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/smile" />

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabarito"

                    android:paddingBottom="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gabarito"
                            android:gravity="end"

                            android:paddingEnd="10dp"
                            android:text="Bio"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                        <EditText
                            android:id="@+id/txtBio"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/login"
                            android:fontFamily="@font/khmerosdangrek"
                            android:text=""
                            android:paddingStart="5dp"
                            android:textColorHint="@color/lightGray"
                            android:hint="អនុញ្ញាតឱ្យសរសេរត្រឹម 255 តួ"
                            android:inputType="textMultiLine"
                            android:textAlignment="center"
                            android:textColor="@color/lightGray"
                            android:textSize="12sp" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/khmerosdangrek"
                            android:gravity="end"

                            android:paddingEnd="10dp"
                            android:text="អ៊ីមែលបច្ចុប្បន្ន"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/gabarito"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="80dp">



                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/khmerosdangrek"
                            android:gravity="end"

                            android:paddingEnd="10dp"
                            android:text="ផ្លាស់ប្ដូរកូដសម្ងាត់"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <EditText
                            android:id="@+id/txtCurrentPassword"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/login"
                            android:inputType="textPassword"
                            android:paddingStart="5dp"
                            android:textColorHint="@color/lightGray"
                            android:fontFamily="@font/khmerosdangrek"
                            android:hint="សូមបញ្ចូលកូដសម្ងាត់បច្ចុប្បន្ន"
                            android:textAlignment="center"
                            android:textColor="@color/lightGray"
                            android:textSize="11sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="80dp">

                        <EditText
                            android:id="@+id/txtPasswordChange"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/login"
                            android:inputType="textPassword"
                            android:textColorHint="@color/lightGray"
                            android:fontFamily="@font/khmerosdangrek"
                            android:hint="សូមបញ្ចូលកូដសម្ងាត់ថ្មី"
                            android:paddingStart="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/lightGray"
                            android:textSize="11sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="80dp">

                        <EditText
                            android:id="@+id/txtConfirmPasswordChange"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/login"
                            android:inputType="textPassword"
                            android:textColorHint="@color/lightGray"
                            android:fontFamily="@font/khmerosdangrek"
                            android:hint="សូមបញ្ចូលកូដសម្ងាត់ថ្មីម្ដងទៀត"
                            android:textAlignment="center"
                            android:textColor="@color/lightGray"
                            android:paddingStart="5dp"
                            android:textSize="11sp" />

                    </LinearLayout>

                </RelativeLayout>

                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"

                    android:fontFamily="@font/khmerosdangrek"
                    android:text="រក្សាទុក"
                    android:textColor="@color/white"
                    android:textColorLink="@color/white"
                    android:textSize="11sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnBackToHomePage"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="661dp"
        android:layout_marginStart="30dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/khmerosdangrek"
            android:text="ត្រឡប់ទៅទំព័រដើម"
            android:textColor="@color/font"
            android:textSize="11sp" />

    </LinearLayout>

</RelativeLayout>